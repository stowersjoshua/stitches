<div class="page-header">
  <%= link_to 'Stitch!', instantiate_stitch_panorama_path(@panorama.id), class: 'btn btn-lg btn-success pull-right' %>
  <h1><%= @panorama.name.titleize %></h1>
</div>

<% if true %>
  <div class="well well-lg">
    <h2>Stitched Photos</h2>
    <div class="row">
      <!--<div class="col-lg-4 col-sm-6 col-xs-12">-->
        <%#= image_tag '/flower.jpg', class: 'thumbnail img-responsive', height: 400 %>
        <% path = "/project-#{@panorama.id}.png" %>
        <%= image_tag(path, class: 'thumbnail img-responsive', height: 400, alt: 'No image generated') %>
      <!--</div>-->
    </div>
  </div>
<% end %>

<div class="well well-lg">
  <h2>Source Photos</h2>
  <div class="row">
    <% @panorama.photos.each do |photo| %>
      <div class="col-lg-4 col-sm-6 col-xs-12">
        <%= image_tag photo.url, class: 'thumbnail img-responsive' %>
      </div>
    <% end %>
  </div>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")), panoramas_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")), edit_panorama_path(@panorama), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")), panorama_path(@panorama), method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>

