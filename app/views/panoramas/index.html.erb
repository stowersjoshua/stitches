<h1>Listing panoramas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @panoramas.each do |panorama| %>
      <tr>
        <td><%= panorama.name %></td>
        <td><%= panorama.user %></td>
        <td><%= link_to 'Show', panorama %></td>
        <td><%= link_to 'Edit', edit_panorama_path(panorama) %></td>
        <td><%= link_to 'Destroy', panorama, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Panorama', new_panorama_path %>
