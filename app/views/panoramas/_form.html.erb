<div class="well">
  <%= form_for @panorama, html: {class: 'form-horizontal form-model'} do |f| %>
      <div class="form-group">
        <%= f.label :name, class: 'control-label col-md-2' %>
        <div class="col-md-10">
          <%= f.text_field :name, class: 'text-field form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :photos, class: 'control-label col-md-2' %>
        <div class="col-md-10">
          <%= f.file_field :photos, multiple: true, class: 'btn btn-default' %>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-md-2">width</label>
        <div class="col-md-10">
          <%= text_field 'width', class: 'text-field form-control' %>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-md-2">height</label>
        <div class="col-md-10">
          <%= text_field 'height', class: 'text-field form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class='col-md-offset-2 col-md-10'>
          <%= f.submit nil, class: 'btn btn-primary' %>
          <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                      panoramas_path, class: 'btn btn-default' %>
        </div>
      </div>
  <% end %>
</div>